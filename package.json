{
  "name": "@fanvue/ui",
  "version": "0.0.0",
  "description": "React component library built with Tailwind CSS for Fanvue ecosystem",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    },
    "./styles/*": "./dist/styles/*"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build --stats-json",
    "build:dictionary": "node src/styles/buildStyles.js",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "publish:dry-run": "pnpm run build && pnpm publish --dry-run"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "tailwindcss": "^4.0.0"
  },
  "dependencies": {
    "@radix-ui/react-slot": "1.2.4",
    "clsx": "2.1.1",
    "tailwind-merge": "3.0.1"
  },
  "devDependencies": {
    "style-dictionary": "5.2.0",
    "@biomejs/biome": "2.0.0",
    "@commitlint/cli": "20.0.0",
    "@commitlint/config-conventional": "20.0.0",
    "@commitlint/types": "20.3.1",
    "@playwright/test": "1.55.1",
    "@size-limit/preset-small-lib": "12.0.0",
    "@storybook/addon-a11y": "10.2.0",
    "@storybook/react": "10.2.0",
    "@storybook/react-vite": "10.2.0",
    "@tailwindcss/postcss": "4.1.18",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.1.0",
    "@testing-library/user-event": "14.6.0",
    "@types/node": "24.10.1",
    "@types/react": "19.2.5",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.1",
    "@vitest/coverage-v8": "4.0.18",
    "autoprefixer": "10.4.20",
    "axe-core": "4.10.0",
    "chromatic": "11.25.0",
    "husky": "9.1.0",
    "jsdom": "26.0.0",
    "lint-staged": "16.0.0",
    "postcss": "8.5.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "size-limit": "12.0.0",
    "storybook": "10.2.0",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3",
    "vite": "7.2.4",
    "vite-plugin-dts": "4.5.4",
    "vitest": "4.0.18",
    "vitest-axe": "1.0.0-pre.3"
  },
  "size-limit": [
    {
      "path": "dist/index.mjs",
      "limit": "50 KB"
    }
  ],
  "lint-staged": {
    "*.{js,ts,tsx,json,css,md}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fanvue/fanv-ui.git"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "design-system",
    "tailwind",
    "fanvue"
  ],
  "author": "Fanvue",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fanvue/fanv-ui/issues"
  },
  "homepage": "https://github.com/fanvue/fanv-ui#readme",
  "engines": {
    "node": ">=24.13.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.4"
}
